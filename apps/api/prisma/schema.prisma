generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model GlobalSettings {
  id       Int    @id @default(1)
  /**
   * authMode:
   * - none | password | totp | both
   * Por enquanto string simples.
   * Depois podemos mudar pra enum.
   */
  authMode String @default("none")

  /**
   * Hash da senha do admin (argon2).
   * Só existe se authMode exigir password.
   */
  adminPasswordHash String?

  /**
   * Secret do TOTP criptografado (vamos implementar no Item 5.3).
   * Só existe se authMode exigir totp.
   */
  totpSecretEnc String?

  /**
   * Nível de log global do backend.
   */
  logLevel String @default("info")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UpdateJob {
  id        String  @id @default(cuid())
  status    String // queued | running | success | failed
  container String
  image     String?
  force     Boolean @default(false)
  pull      Boolean @default(true)

  createdAt  DateTime  @default(now())
  startedAt  DateTime?
  finishedAt DateTime?

  resultJson String?
  error      String?

  lockedAt DateTime?
  lockedBy String? // ✅ ADICIONAR

  @@index([status, createdAt])
  @@index([lockedAt])
}

model UpdateSchedulerConfig {
  id Int @id @default(1)

  enabled Boolean @default(false)

  /**
   * Cron no formato padrão (5 campos):
   * ex: "*\/5 * * * *"
   */
  cronExpr String @default("*/5 * * * *")

  /**
   * scan_only | scan_and_update
   */
  mode String @default("scan_only")

  /**
   * all | labeled
   */
  scope String @default("all")

  /**
   * Seleção por labels (quando scope=labeled)
   * Ex.: docksentinel.scan=true para entrar no scan
   * Ex.: docksentinel.update=true para permitir update automático
   */
  scanLabelKey   String @default("docksentinel.scan")
  updateLabelKey String @default("docksentinel.update")

   // ✅ controle de execução (recomendado)
  lastRunAt   DateTime?
  running     Boolean  @default(false)
  lockedAt    DateTime?
  lockedBy    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
